{% extends 'layouts.njk' %}


{% block content %}

<div class="card table-container">
    <a href="/teachers/create">New</a>
    <table width="100%">
        <thead>
            <tr>
                <th>Teacher</th>
                <th>Attendence</th>
                <th>View More</th>
            </tr>
        </thead>
        <tbody>
            {% for teacher in teachers %}
            <tr>
                <td>
                    <span 
                    style="background-image: url({{teacher.avatar_url}})">         
                    </span>
                    {{teacher.name}}
                </td>
                <td>
                    {% for attendence in teacher.attendence %}
                        <span>{{ attendence }}</span>
                    {% endfor %}
                </td>
                <td><a href="/teachers/{{teacher.id}}">View</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock content %}

