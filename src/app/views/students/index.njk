{% extends 'layouts.njk' %}


{% block content %}

<div class="card table-container">
    <a href="/students/create">New</a>
    <table width="100%">
        <thead>
            <tr>
                <th>Student</th>
                <th>E-mail</th>
                <th>Education</th>
            </tr>
        </thead>
        <tbody>
            {% for student in students %}
            <tr>
                <td>
                    <span 
                    style="background-image: url({{student.avatar_url}})">         
                    </span>
                    {{student.name}}
                </td>
                <td>
                    {{student.email}}
                </td>
                <td>
                    {{student.degree}}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock content %}

